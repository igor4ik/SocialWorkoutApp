<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_userName"
        android:id="@+id/label_User"
        android:layout_marginTop="100dp"
        android:textSize="25sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="64dp" />

    <EditText
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text=""
        android:hint="@string/userName"
        android:id="@+id/editText_User"
        android:layout_marginTop="97dp"
        android:layout_toEndOf="@+id/label_User" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_password"
        android:id="@+id/label_Password"
        android:layout_below="@+id/label_User"
        android:layout_alignEnd="@+id/label_User"
        android:layout_marginTop="44dp"
        android:textSize="25sp"/>

    <EditText
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="@string/password"
        android:ems="9"
        android:id="@+id/editText_Password"
        android:layout_marginTop="177dp"
        android:layout_toEndOf="@+id/label_Password"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/logIn"
        android:id="@+id/btn_LogIn"
        android:layout_below="@+id/label_Password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        style="@style/btnStyleGenoa"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/registration"
        android:id="@+id/btn_homeRegistration"
        android:layout_below="@+id/btn_LogIn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        style="@style/btnStyleGenoa"/>
</RelativeLayout>