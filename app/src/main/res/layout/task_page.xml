<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout_Task"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingLeft="10dp"
    android:paddingBottom="5dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_taskName"
        android:id="@+id/tv_row_taskName"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/taskName"
        android:id="@+id/row_taskName"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/tv_row_taskName"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/description"
        android:id="@+id/row_description"
        android:layout_below="@+id/tv_row_taskName"
        android:layout_alignParentStart="true"
        android:paddingBottom="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_taskTime"
        android:id="@+id/tv_row_time"
        android:layout_below="@+id/row_description"
        android:layout_alignParentStart="true"
        android:paddingBottom="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/taskTime"
        android:id="@+id/row_taskTime"
        android:layout_below="@+id/row_description"
        android:layout_toEndOf="@+id/tv_row_time"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_taskRev"
        android:id="@+id/tv_row_rev"
        android:layout_below="@+id/row_description"
        android:layout_toEndOf="@+id/row_taskTime"
        android:paddingLeft="30dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/taskRev"
        android:id="@+id/row_taskRew"
        android:layout_alignTop="@+id/tv_row_rev"
        android:layout_toEndOf="@+id/tv_row_rev"
        android:paddingLeft="10dp"/>


</RelativeLayout>